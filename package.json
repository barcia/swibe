{
  "name": "swibe",
  "version": "1.0.0-beta.1",
  "license": "MIT",
  "description": "A simple swipe menu",
  "homepage": "http://barcia.github.io/swibe",
  "repository": "https://github.com/barcia/swibe",
  "bugs": "https://github.com/barcia/swibe/issues",
  "author": {
    "name": "Iv√°n Barcia",
    "email": "ivan@barcia.gal",
    "url": "https://barcia.gal"
  },
  "keywords": [
    "js",
    "javascript",
    "menu",
    "slide",
    "swipe",
    "swibe",
    "bramework"
  ],
  "files": [
    "LICENSE",
    "README.md",
    "swibe.js",
    "swibe.min.js"
  ],
  "scripts": {
    "clean": "rm -rf swibe.min.js",
    "build:js": "uglifyjs ./swibe.js --mangle --compress  --output ./swibe.min.js",
    "build:docs": "cpx './swibe.min.js' docs/demo/",
    "build": "run-s clean build:js build:docs",
    "watch:js": "nodemon --watch ./swibe.js --exec 'npm run build:js'",
    "watch:docs": "npm run build:docs -- --watch",
    "server": "browser-sync start --server './docs/demo/' --browser 'firefox developer edition' --watch --files './docs/demo/**/*'",
    "dev": "npm run clean && run-p watch:js watch:docs server",
    "babel": "babel swibe.js --out-file swibe.babel.js"
  },
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "cpx": "^1.5.0",
    "nodemon": "^1.18.5",
    "npm-run-all": "^4.1.3",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/preset-env": "^7.2.0"
  }
}
